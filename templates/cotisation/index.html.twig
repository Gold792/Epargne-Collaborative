{% extends 'base.html.twig' %}

{% block title %}Liste des Cotisations{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Cotisations</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        <div class="d-flex justify-content-between mb-3">
            <a href="{{ path('app_cotisation_new') }}" class="btn btn-primary">Créer une nouvelle cotisation</a>
            <a href="{{ path('app_cotisation_add_fixtures') }}" class="btn btn-secondary">Ajouter des cotisations prédéfinies</a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Type</th>
                    <th>Montant objectif</th>
                    <th>Montant minimum</th>
                    <th>Date début</th>
                    <th>Date fin</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for cotisation in cotisations %}
                <tr>
                    <td>{{ cotisation.id }}</td>
                    <td>{{ cotisation.titre }}</td>
                    <td>{{ cotisation.typeCotisation }}</td>
                    <td>{{ cotisation.montantObjectif|number_format(2, ',', ' ') }} €</td>
                    <td>{{ cotisation.montantMinimum|number_format(2, ',', ' ') }} €</td>
                    <td>{{ cotisation.dateDebut ? cotisation.dateDebut|date('d/m/Y') : '' }}</td>
                    <td>{{ cotisation.dateFin ? cotisation.dateFin|date('d/m/Y') : 'Indéfinie' }}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_cotisation_show', {'id': cotisation.id}) }}" class="btn btn-sm btn-info">Voir</a>
                            <a href="{{ path('app_cotisation_edit', {'id': cotisation.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucune cotisation trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}